<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <!--編集画面へのリンクを設定-->
  <!--if　で　ログインしているユーザーに本人のみ、編集リンクを表示-->
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

 <!--ユーザーの投稿一覧-->
 <%= render 'post_images/list', post_images: @post_images %>
